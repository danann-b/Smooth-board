@model SmoothBoardStylersApp.Models.Surfboard

@{
    ViewData["Title"] = "Surfboard";
}

<h1>Edit</h1>

<h4>Surfboard</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Naam" class="control-label"></label>
                <input asp-for="Naam" class="form-control" />
                <span asp-validation-for="Naam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Beschrijving" class="control-label"></label>
                <input asp-for="Beschrijving" class="form-control" />
                <span asp-validation-for="Beschrijving" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MateriaalId" class="control-label"></label>
                <select asp-for="MateriaalId" class="form-control" asp-items="ViewBag.MateriaalList"></select>
                <span asp-validation-for="MateriaalId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prijs" class="control-label"></label>
                <input asp-for="Prijs" class="form-control" />
                <span asp-validation-for="Prijs" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FotoUrl" class="control-label"></label>
                @Html.DisplayFor(model => model.FotoUrl)
                <p>
                    <img src="~/img/thumbnail.@Model.FotoUrl" alt="@Model.Naam" />
                </p>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="FotoUrl" />
                <label asp-for="FotoUrl" class="control-label"></label>
                <input type="file" name="fotoFile" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
