                <!--Hier komt de prijs te staan-->
                <span>@Html.DisplayNameFor(model => model.Prijs)</span>
            </div>
        </div>
        <div class="p-2">
            <div class="product-foto">
                <!--Hier komt een foto van het product-->
                @Html.DisplayNameFor(model => model.FotoUrl)
            </div>
            <div class="product-content">
                <!--Hier komt de naam van het product-->
                <h3 class="title">@Html.DisplayNameFor(model => model.Naam)</h3>
                <!--Hier komt een beschrijving van het product-->
                <p>@Html.DisplayNameFor(model => model.Beschrijving)</p>
                <p>@Html.DisplayNameFor(model => model.Materiaal)</p>
                <!--Hier komt de prijs te staan-->
                <span>@Html.DisplayNameFor(model => model.Prijs)</span>
            </div>
        </div>

    </div>
</div>
<hr>

<thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Naam)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Beschrijving)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Prijs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.FotoUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Materiaal)
        </th>
        <th></th>
    </tr>
</thead>
<tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Naam)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Beschrijving)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prijs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FotoUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Materiaal.Naam)
            </td>
        </tr>
    }
</tbody>

